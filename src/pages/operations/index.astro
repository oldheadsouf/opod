---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Query all operations
const operations = await getCollection('operations');

// Sort by date (most recent first)
const sortedOperations = operations
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Format date helper
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};
---

<BaseLayout
  title="Field Operations - OPOD"
  description="Active projects documenting the archaeology of digital culture, forgotten trends, and obsolete knowledge systems."
>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 lg:py-20">

    <!-- Page Header -->
    <header class="mb-12 sm:mb-16">
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4 leading-tight">
        Field Operations
      </h1>
      <p class="text-base sm:text-lg text-mist max-w-3xl">
        Active projects documenting the archaeology of digital culture, forgotten trends, and obsolete knowledge systems.
      </p>
    </header>

    <!-- Operations List -->
    <section>
      {sortedOperations.length === 0 ? (
        <div class="bg-void border border-slate p-8">
          <p class="text-mist">No operations available at this time.</p>
        </div>
      ) : (
        <div class="space-y-6">
          {sortedOperations.map((operation) => (
            <article class="bg-void border border-slate p-6 sm:p-8 hover:border-cyan-dim transition-colors">
              <a href={`/operations/${operation.slug}`} class="group">
                <h2 class="text-xl sm:text-2xl font-bold text-white mb-3 group-hover:text-cyan transition-colors">
                  {operation.data.title}
                </h2>
                <p class="text-sm text-cyan-dim mb-4 uppercase tracking-wider">
                  {formatDate(operation.data.date)}
                </p>
                <p class="text-base text-mist leading-relaxed mb-4">
                  {operation.data.description}
                </p>
                {operation.data.tags && operation.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {operation.data.tags.map((tag) => (
                      <span class="text-xs text-fog bg-slate px-2 py-1 border border-slate">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </a>
            </article>
          ))}
        </div>
      )}
    </section>

  </div>
</BaseLayout>
